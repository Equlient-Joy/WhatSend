# ===========================================
# WhatSend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL - Supabase, Render, or local)
# For Supabase, use the pooler connection with pgbouncer
DATABASE_URL="postgresql://user:password@host:5432/database?pgbouncer=true&sslmode=require"

# Redis (Redis Cloud, Render Redis, or local)
# NOTE: Redis Cloud FREE tier does NOT support TLS - use redis:// not rediss://
# For paid tiers with TLS, use: rediss://default:password@host:port
REDIS_URL="redis://default:password@host:port"

# Shopify App Credentials (from Shopify Partners Dashboard)
SHOPIFY_API_KEY=""
SHOPIFY_API_SECRET=""

# App URL (your deployment URL)
# Development: http://localhost:3000
# Production: https://your-app.onrender.com
HOST="https://your-app.onrender.com"

# Port (Render sets this automatically)
PORT=3000

# Node Environment
NODE_ENV="production"
